pipeline {
  agent any
  stages {
    stage("build") {
      steps {
        echo 'building...'
        nodejs('Node-18.6.0'){
          sh 'yarn install'
          sh
        }
      }
    }
    stage("test") {
      steps {
        echo 'testing...'
        withGradle() {
          sh './gradlew -v'
        }
      }
    }
    stage("deploy") {
      steps {
        echo 'deploying...'
      }
    }
  }
}

node {
  //groovy script
}
